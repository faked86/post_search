{
  "swagger": "3.0",
  "info": {
    "title": "Post search",
    "description": "API to search and delete post from database"
  },
  "paths": {
    "/search": {
      "get": {
        "operationId": "search",
        "summary": "Find post by query",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Query to find post"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of 20 post"
          },
          "400": {
            "description": "Need 'query' parameter in GET method"
          }
        }
      }
    },
    "/post/{postId}": {
      "delete": {
        "operationId": "delete",
        "summary": "Delete post by postId",
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Id of a post to delete"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK response"
          },
          "500": {
            "description": "Something went wrong response"
          }
        }
      }
    }
  }
}